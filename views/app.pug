html
	head
		title Andrew Patterson
		// Latest compiled and minified CSS
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
		link(rel='stylesheet', href='/static/css/custom.css')
	
		script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g=', crossorigin='anonymous')
		// Latest compiled and minified JavaScript
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
		script(src='https://use.fontawesome.com/4af4026c41.js')
		script(src='/static/js/bundle.js')

	body(ng-app="myApp")
		.container-fluid
			.row
				.col-md-3
					.row
						h1 Andrew R. Patterson
				.col-md-9
					.row
						ul.nav.nav-pills.nav-justified
							li(role='presentation')
								a(href='#!profile')
									i.fa.fa-user-o(aria-hidden='true')
									|  Profile
							li(role='presentation')
								a(href='#!blog')
									i.fa.fa-pencil-square-o(aria-hidden='true')
									|  Blog
							li(role='presentation')
								a(href='/github')
									i.fa.fa-code-fork(aria-hidden='true')
									|  GitHub
							li(role='presentation')
								a(href='#/!message')
									i.fa.fa-envelope-o(aria-hidden='true')
									|  Message
					div(class="row content")
						include partials/profile.pug
						
